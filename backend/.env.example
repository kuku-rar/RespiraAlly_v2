# RespiraAlly V2.0 - Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ================================
# Application Settings
# ================================
ENVIRONMENT=development
DEBUG=True
APP_NAME=RespiraAlly V2.0

# ================================
# Database (PostgreSQL + pgvector)
# ================================
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://respirally:respirally_dev@localhost:5432/respirally_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# ================================
# Redis Cache
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ================================
# RabbitMQ Message Broker (Phase 2)
# ================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ================================
# JWT Authentication
# ================================
# IMPORTANT: Change this to a secure random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================
# CORS Configuration
# ================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ================================
# LINE Platform
# ================================
# Get these from LINE Developers Console: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_LIFF_ID=your-liff-app-id

# ================================
# OpenAI (GPT-4 for RAG)
# ================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# ================================
# LangChain (Optional - for RAG tracing)
# ================================
LANGCHAIN_TRACING_V2=False
LANGCHAIN_API_KEY=

# ================================
# Vector Search (pgvector)
# ================================
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# ================================
# Logging
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=json
